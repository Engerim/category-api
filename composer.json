{
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^7.2.0",
    "ext-bcmath": "*",
    "api-platform/api-pack": "^1.0",
    "api-platform/core": "^2.2",
    "doctrine/doctrine-migrations-bundle": "^1.3",
    "doctrine/migrations": "^1.6",
    "ramsey/uuid": "^3.7",
    "ramsey/uuid-doctrine": "^1.4",
    "symfony/dotenv": "^3.0",
    "symfony/flex": "^1.0",
    "symfony/lts": "^3",
    "symfony/profiler-pack": "^1.0",
    "symfony/yaml": "^3.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/",
      "App\\Behat\\": "features/bootstrap"
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear --no-warmup": "symfony-cmd",
      "cache:warmup": "symfony-cmd",
      "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
      "doctrine:migrations:migrate --no-interaction": "symfony-cmd",
      "cache:clear": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "code-style": [
      "vendor/bin/phpcs",
      "php -d memory_limit=256M vendor/bin/phpstan analyse -l 7 -c phpstan.neon src tests features"
    ],
    "tests-ci": [
      "vendor/bin/phpunit",
      "php -d memory_limit=256M vendor/bin/behat -p bamboo -s default",
      "infection --min-msi=65 --min-covered-msi=88 --threads=4",
      "php tests/coverageChecker.php var/coverage/clover.xml 100"
    ],
    "post-deploy-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*",
    "symfony/twig-bundle": "<3.3",
    "symfony/debug": "<3.3"
  },
  "extra": {
    "symfony": {
      "id": "01BKA1X7ZKGKEPEMRHPZ0VXGHM",
      "allow-contrib": true
    }
  }
}
